<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses</title>
    <link rel="stylesheet" href="/styles/expenses.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script src="/scripts/general.js"></script>
    
</head>
<body>
    <div class="main">
        {{>navbar}}
        {{!-- {{>gridheader}} --}}

        <div class="container">
                <h1>Recent Expenses</h1>
                <div class="recent-expenses">
                    {{#each recentExpenses}}
                    <div class="expense-card">
                        <p><strong>Name:</strong> {{name}}</p>
                        <p><strong>Date:</strong> {{formatDate date}}</p>
                        <p><strong>Amount:</strong> {{amount}}</p>
                        <p><strong>Payment Method:</strong> {{paymentMethod}}</p>
                        <p><strong>Category:</strong> {{category}}</p>
                        <p><strong>Description:</strong> {{description}}</p>
                        <p><strong>Receipt:</strong> 
                            {{#if receiptUrl}}
                            <a href="{{receiptUrl}}" target="_blank">View Receipt</a>
                            {{else}}
                            No Receipt
                            {{/if}}
                        </p>
                    </div>
                    {{/each}}
                </div>
            <header>
                <h1>Expenses</h1>
                <button id="add-expense-btn" class="btn">Add Expense</button>
            </header>
            <section class="expenses">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Receipt</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="expenses-list">
                        {{#each expenses}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{formatDate date}}</td>
                            <td>{{amount}}</td>
                            <td>{{paymentMethod}}</td>
                            <td>{{category}}</td>
                            <td>{{description}}</td>
                            <td>
                                {{#if receiptUrl}}
                                <a href="{{receiptUrl}}" target="_blank">View Receipt</a>
                                {{else}}
                                No Receipt
                                {{/if}}
                            </td>
                            <td>
                                <button class="edit-btn btn" data-id="{{_id}}">Edit</button>
                                <button class="delete-btn btn" data-id="{{_id}}">Delete</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
    

    <!-- Add/Edit Expense Modal -->
    <div id="expense-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modal-title">Add Expense</h2>
            <form id="expense-form">
                <input type="hidden" id="expense-id">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required>
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount" required>
                <label for="payment-method">Payment Method:</label>
                <input type="text" id="payment-method" name="payment-method" required>
                <label for="category">Category:</label>
                <input type="text" id="category" name="category" required>
                <label for="description">Description:</label>
                <textarea id="description" name="description" required></textarea>
                <label for="receipt-url">Receipt URL:</label>
                <input type="url" id="receipt-url" name="receipt-url">
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </div>
    <script src="/scripts/expenses.js"></script>
</body>
</html>
